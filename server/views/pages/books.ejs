<%- include("../partials/header") %>

<div class="container py-5 flex-fill">
  <h2 class="mb-4">Books Catalogue</h2>

  <% if (books.length > 0) { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% books.forEach(book => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <!-- Book Cover Thumbnail -->
            <% if (book.isbn) { %>
              <img
                src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg"
                class="card-img-top"
                alt="Cover of <%= book.title %>"
              />
            <% } else { %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center text-muted" style="height: 250px;">
                No cover
              </div>
            <% } %>

            <!-- Book Info -->
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text text-muted small mb-2">
                <%= book.authors && book.authors.length ? book.authors.join(", ") : "Unknown author" %>
              </p>
              <p class="text-muted small mb-3">
                <strong>Published:</strong> 
                <%= book.publish_date ? book.publish_date.toString().slice(0, 10) : "N/A" %>
              </p>

              <!-- Link to Details Page -->
              <a href="/books/<%= book.book_id %>" class="mt-auto btn btn-primary btn-sm">
                View Details
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info">No books found.</div>
  <% } %>
</div>

<%- include("../partials/footer") %>
