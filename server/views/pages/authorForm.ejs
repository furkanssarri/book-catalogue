<div class="container py-5">
  <h1 class="mb-4 text-center"><%= title %></h1>

  <form 
    id="editAuthorForm" 
    method="<%= method %>" 
    action="<%= action %>"
    class="<%= errors ? 'was-validated' : '' %>"
    novalidate
  >
    <!-- Name -->
    <div class="mb-3">
      <label for="name" class="form-label">Author Name</label>
      <input 
        type="text"
        class="form-control <%= errors && errors.name ? 'is-invalid' : '' %>"
        id="name"
        name="name"
        required
        minlength="2"
        maxlength="100"
        value="<%= old ? old.name : '' %>"
      >
      <div class="invalid-feedback">
        <%= errors && errors.name ? errors.name.msg : "Please provide a valid name." %>
      </div>
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label for="country" class="form-label">Country</label>
      <input 
        type="text"
        class="form-control <%= errors && errors.country ? 'is-invalid' : '' %>"
        id="country"
        name="country"
        required
        minlength="2"
        maxlength="50"
        value="<%= old ? old.country : '' %>"
      >
      <div class="invalid-feedback">
        <%= errors && errors.country ? errors.country.msg : "Please provide a valid country." %>
      </div>
    </div>

    <!-- Bio -->
    <div class="mb-3">
      <label for="bio" class="form-label">Biography</label>
      <textarea 
        class="form-control <%= errors && errors.bio ? 'is-invalid' : '' %>"
        id="bio"
        name="bio"
        rows="5"
      ><%= old ? old.bio : '' %></textarea>
      <div class="invalid-feedback">
        <%= errors && errors.bio ? errors.bio.msg : "Please provide a biography." %>
      </div>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary w-100">Update Author</button>
  </form>
</div>
