
<div class="container py-4">
  <h1 class="mb-4 text-center"><%= title %></h1>

  <% if (authors && authors.length > 0) { %>
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
      <% authors.forEach(author => { %>
        <div class="col">
          <div class="card h-100 shadow-sm text-center">
            <div class="card-body p-2 d-flex flex-column">
              <h6 class="card-title fw-bold text-truncate mb-1">
                <a href="/authors/<%= author.author_id %>" class="text-decoration-none text-dark stretched-link">
                  <%= author.name %>
                </a>
              </h6>
              <p class="text-muted small mb-2"><%= author.country %></p>
              <p class="card-text small flex-grow-1 text-truncate" title="<%= author.bio %>">
                <%= author.bio ? author.bio.substring(0, 80) + 'â€¦' : 'No bio available' %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-center text-muted">No authors found.</p>
  <% } %>
</div>
